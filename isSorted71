Using Recursion

#include <iostream>
using namespace std;
#include<vector>

bool isSorted(vector<int> &arr,int index){
  if(index>=arr.size()-1)
  {
    return true;
  }
  if(arr[index]>=arr[index+1])
  {
    return false;
  }
  return isSorted(arr,index+1);
}

int main() 
{
    vector<int> v={1,2,3,4,5};
    cout<<"IS Sorted: "<<isSorted(v,0);
    return 0;
}
